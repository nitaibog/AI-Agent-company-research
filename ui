<body>
    <div class="container">
        <h1>üìä Company Research Agent</h1>
        <p>Enter a query to get insights on a company.</p>
        <div class="chatbox">
            <textarea id="user-input" placeholder="E.g., 'Tell me about Tesla's financial health'"></textarea>
            <button onclick="sendQuery()">üîç Get Company Insights</button>
        </div>
        <div id="results">
            <h2>Results</h2>
            <div id="output"></div>
        </div>
    </div>

    <script>
        function sendQuery() {
            let userInput = document.getElementById("user-input").value;
            let outputDiv = document.getElementById("output");
            
            if (userInput.trim() === "") {
                outputDiv.innerHTML = "<p>Please enter a query.</p>";
                return;
            }
            
            outputDiv.innerHTML = `<p><strong>Searching for:</strong> ${userInput}</p>`;
            
            // Placeholder for actual API call
            setTimeout(() => {
                outputDiv.innerHTML += `<p><strong>Result:</strong> Sample company research result for "${userInput}"</p>`;
            }, 1000);
        }
    </script>
